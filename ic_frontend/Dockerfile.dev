# Development Dockerfile for Vite dev-server
FROM node:20-alpine

WORKDIR /app

COPY package*.json ./

# Install dependencies with legacy peer deps support
RUN npm install --legacy-peer-deps

# Copy the entire app
COPY . .

# Expose ports for Vite dev server and HMR
EXPOSE 5173 8080

# Start Vite dev server
CMD ["npm", "run", "dev"]
